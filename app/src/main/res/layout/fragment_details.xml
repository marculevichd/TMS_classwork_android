<?xml version="1.0" encoding="utf-8"?>




<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".presentation.fragments.DetailsFragment">

    <ImageView
        android:id="@+id/dtImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175">

    </ImageView>

    <TextView
        android:id="@+id/dtName"
        android:layout_width="108dp"
        android:layout_height="42dp"
        android:textSize="30sp"
        android:textColor="@color/teal_200"
        android:layout_marginTop="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dtImg"
        app:layout_constraintStart_toStartOf="@+id/dtImg"
        app:layout_constraintTop_toBottomOf="@+id/dtImg"
        app:layout_constraintVertical_bias="0.003">
    </TextView>

    <TextView
        android:id="@+id/dtDate"
        android:layout_width="104dp"
        android:layout_height="39dp"
        android:layout_marginTop="56dp"
        android:textSize="20sp"
        android:textColor="@color/teal_700"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dtName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dtName"
        app:layout_constraintTop_toBottomOf="@+id/dtName"
        app:layout_constraintVertical_bias="0.022">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>

